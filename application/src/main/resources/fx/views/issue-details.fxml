<?xml version="1.0" encoding="UTF-8"?>

<?import de.pbauerochse.worklogviewer.fx.issuesearch.details.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<fx:root type="BorderPane" fx:id="issueDetailsPane" styleClass="issue-details-pane" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" />
            </padding>

            <Label fx:id="issueSummaryLabel" styleClass="issue-summary" wrapText="true" />
            <FlowPane fx:id="issueTagsPane" VBox.vgrow="SOMETIMES" hgap="5.0" vgap="3.0" />
            <FlowPane fx:id="issueFieldsPane" VBox.vgrow="SOMETIMES" />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <WebView fx:id="issueDescriptionWebView"/>
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <BorderPane>
                <center>
                    <Label text="Zeitbuchungen" BorderPane.alignment="CENTER_LEFT">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                    </Label>
                </center>
                <right>
                    <HBox BorderPane.alignment="CENTER">
                        <Button fx:id="createWorkItemButton" />
                    </HBox>
                </right>
            </BorderPane>
            <TableView fx:id="issueWorklogsTableView" prefHeight="200.0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <WorklogDateColumn fx:id="dateColumn"/>
                    <WorklogAuthorColumn/>
                    <WorklogTypeColumn/>
                    <WorklogDescriptionColumn/>
                    <WorklogDurationColumn/>
                    <WorklogActionsColumn/>
                </columns>
                <sortOrder>
                    <fx:reference source="dateColumn" sortType="DESCENDING" />
                </sortOrder>
            </TableView>
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
        </VBox>
    </bottom>

</fx:root>
